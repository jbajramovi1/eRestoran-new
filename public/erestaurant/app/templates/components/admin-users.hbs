{{#if enabled}}
<div class="user-head">
  <div class="input-group search-input-group">
      <input type="text" class="form-control"  placeholder="Search users" >
          <span class="input-group-addon">
                <button type="submit">
                    <span class="glyphicon glyphicon-search"></span>
                </button>
          </span>
  </div>
  <button {{action 'openAddUser'}} class="button-add add-restaurant">Add user</button>
</div>

<table class="table table-hover table-bordered table-users">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone number</th>
        <th>Country</th>
        <th>City</th>
        <th class="options-col">Options</th>
      </tr>
    </thead>
    <tbody>

      {{#each model as |user|}}
      <tr>
        <td>{{user.firstName}}</td>
        <td>{{user.lastName}}</td>
        <td>{{user.email}}</td>
        <td>{{user.phone}}</td>
        <td>{{user.country}}</td>
        <td>{{user.city}}</td>
        <td>
          <a href="#">
          <span class="glyphicon glyphicon-pencil admin-glyphicon"></span>
          </a>
          <a {{action 'toggleModal' user.id user.email}} href="#">
          <span class="glyphicon glyphicon-trash admin-glyphicon"></span>
          </a>
        </td>
      </tr>
      {{#if deleteEnabled}}
      <div class="modal-fog modal-fog-admin">
        <div class="modal-frame modal-frame-admin">
          <div class="modal-title modal-title-admin">
            Delete user
          </div>
          <div class="modal-body modal-body-admin">
            Are you sure you want to delete user {{deleteName}}?<br><br>
            <button {{action 'deleteUser'}} class="admin-confirm-btn ">Delete user</button>
            <button {{action 'toggleModal'}} class="admin-cancel-btn">Cancel</button>
          </div>
        </div>
      </div>
      {{/if}}
      {{/each}}

    </tbody>
  </table>
{{/if}}
